@model IEnumerable<MyEShop.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>My e-Shop</h1>
    <p class="lead">List of Products</p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-4 " style="height:450px; padding:10px;margin:10px;border:solid thin blue">
        <div class="col-md-12">
            <img class="img-rounded" style="height:250px" src="~/Content/ProductImages/@item.Image" />
        </div>
        <div class="col-md-12">
            <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
        </div>
        <div class="col-md-12">
            <p>@item.description</p>
        </div>
        <div class="col-md-12">
            <p>@item.Price</p>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-success">Add to Basket</a>
        </div>
    </div>
    }

    <div class="col-md-12 clearfix"></div>"

</div>